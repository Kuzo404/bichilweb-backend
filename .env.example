# ============================================
# Django Backend - Environment Variables
# Copy this file to .env and fill in the values
# ============================================

# --- Security ---
# Generate a strong secret key for production!
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=127.0.0.1,localhost

# --- Database (PostgreSQL) ---
DB_NAME=ul_bichil
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# --- CORS ---
# Set to False in production and use CORS_ALLOWED_ORIGINS instead
CORS_ALLOW_ALL_ORIGINS=True
# Comma-separated list of allowed origins (used when CORS_ALLOW_ALL_ORIGINS=False)
# CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://your-admin.com
